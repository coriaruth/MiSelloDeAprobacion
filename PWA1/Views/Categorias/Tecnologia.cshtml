@model IEnumerable<PWA1.Models.Reseña>

@{
    ViewData["Title"] = "Tecnología";

    var subcategorias = Model
        .Where(r => r.Subcategoria != null)
        .Select(r => r.Subcategoria.Nombre)
        .Distinct()
        .OrderBy(s => s)
        .ToList();
}

<h1 class="mb-4">Tecnología</h1>

@if (Model != null && Model.Any())
{
    <div class="mb-3 d-flex justify-content-end align-items-center">
        <label for="subcatFiltro" class="form-label me-2">Filtrar por subcategoría:</label>
        <select id="subcatFiltro" class="form-select w-auto">
            <option value="">Todas</option>
            @foreach (var sub in subcategorias)
            {
                <option value="@sub">@sub</option>
            }
        </select>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4" id="contenedorResenias">
        @foreach (var reseña in Model)
        {
            <div class="col d-flex reseña-card" data-subcategoria="@reseña.Subcategoria?.Nombre">
                <div class="card flex-fill h-100">
                    <img src="@reseña.ImagenRuta"
                         class="card-img-top img-fluid"
                         style="object-fit: cover; height: 200px;"
                         alt="Imagen reseña">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@reseña.Titulo</h5>
                        <p class="card-text">@reseña.Contenido</p>
                        <p><strong>Autor:</strong> @reseña.Usuario?.Nombre</p>
                        <p><strong>Subcategoría:</strong> @reseña.Subcategoria?.Nombre</p>
                        <ul class="list-unstyled mb-0">
                            <li><strong>Calidad:</strong> @reseña.PuntuacionCalidad</li>
                            <li><strong>Precio:</strong> @reseña.PuntuacionPrecio</li>
                            <li><strong>Durabilidad:</strong> @reseña.PuntuacionDurabilidad</li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        No hay reseñas en esta categoría.
    </div>
}

@section Scripts {
    <script>
        const filtro = document.getElementById('subcatFiltro');
        const tarjetas = document.querySelectorAll('.reseña-card');

        filtro.addEventListener('change', function() {
            const seleccion = this.value;
            tarjetas.forEach(card => {
                if (!seleccion || card.dataset.subcategoria === seleccion) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        });
    </script>
}

