@model IEnumerable<PWA1.Models.Reseña>

@{
    ViewData["Title"] = "Mi Cuenta";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="mb-3 text-primary">Bienvenido, @ViewBag.Usuario!</h2>
            <p class="mb-4">
                Esta es tu cuenta personal. Aquí podrás ver y gestionar tus reseñas.
            </p>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="mb-0">Mis Reseñas</h4>
                <a asp-controller="Resenias" asp-action="Reseñas" class="btn btn-primary">
                    <i class="bi bi-plus-lg"></i> Crear Reseña
                </a>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Título</th>
                                <th>Categoría</th>
                                <th>Subcategoría</th>
                                <th>Fecha</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var reseña in Model)
                            {
                                <tr>
                                    <td>@reseña.Titulo</td>
                                    <td>@reseña.Categoria?.Nombre</td>
                                    <td>@reseña.Subcategoria?.Nombre</td>
                                    <td>@reseña.FechaReseña?.ToString("dd/MM/yyyy")</td>
                                    <td class="text-end">
                                        <a asp-controller="Resenias"
                                           asp-action="EditarR"
                                           asp-route-id="@reseña.ReseñaId"
                                           class="btn btn-outline-warning btn-sm me-2">
                                            <i class="bi bi-pencil"></i> Editar
                                        </a>
                                        <button type="button"
                                                class="btn btn-outline-danger btn-sm"
                                                data-bs-toggle="modal"
                                                data-bs-target="#confirmarBorradoModal"
                                                data-id="@reseña.ReseñaId"
                                                data-titulo="@reseña.Titulo">
                                            <i class="bi bi-trash"></i> Borrar
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info mt-3">
                    No has creado ninguna reseña todavía.
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal de confirmación de borrado -->
<div class="modal fade" id="confirmarBorradoModal" tabindex="-1" aria-labelledby="confirmarBorradoLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmarBorradoLabel">Confirmar Borrado</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                ¿Estás seguro de que deseas borrar la reseña <strong id="tituloResena"></strong>?
            </div>
            <div class="modal-footer">
                <form id="formBorrar" method="post">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Borrar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var modal = document.getElementById('confirmarBorradoModal');
        modal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');
            var titulo = button.getAttribute('data-titulo');

            var tituloElemento = modal.querySelector('#tituloResena');
            tituloElemento.textContent = titulo;

            var form = modal.querySelector('#formBorrar');
            form.action = '/Resenias/BorrarConfirmado/' + id;
        });
    </script>
}



