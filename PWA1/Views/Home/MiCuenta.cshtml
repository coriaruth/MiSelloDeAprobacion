@{
    ViewData["Title"] = "MiCuenta";
}

<div>
    <h2 class="mb-4 text-center">Inicio de Sesión</h2>
    <form class="formulario-anchoText">
        <ul class="list-unstyled">

            <li>
                <div class="col">
                    <label class="form-label">Usuario:</label>
                    <input type="text" class="form-control" />
                </div>
            </li>

            <li class="mt-3">
                <div class="col">
                    <label class="form-label">Contraseña:</label>
                    <input type="password" class="form-control" />
                </div>
            </li>

            <li class="mt-4 text-center">
                <button type="submit" class="btn btn-primary">Iniciar</button>
            </li>

            <li class="mt-3 text-center">
                <p>¿No tenés cuenta? <a asp-area="" asp-controller="Home" asp-action="Registrar">Registrarse</a></p>
            </li>

        </ul>
    </form>
</div>


